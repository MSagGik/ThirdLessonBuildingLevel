<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="ПРИЛОЖЕНИЕ СТРОИТЕЛЬНЫЙ УРОВЕНЬ"
        android:textColor="#008388"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accelerometer"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="19dp"
        android:background="#FAF0E8"
        android:gravity="center"
        android:hint="Данные акселерометра"
        android:textColor="#008388"
        android:textSize="17sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/gyroscope"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="19dp"
        android:background="#FAF0E8"
        android:gravity="center"
        android:hint="Данные гироскопа"
        android:textColor="#008388"
        android:textSize="17sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accelerometer" />

    <TextView
        android:id="@+id/rotation"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="19dp"
        android:background="#FAF0E8"
        android:gravity="center"
        android:hint="Данные угла наклона"
        android:textColor="#008388"
        android:textSize="17sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gyroscope" />

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:background="#FAF0E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rotation">

        <ImageView
            android:id="@+id/levelBuild"
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="#008388"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>